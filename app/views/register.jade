doctype html
html
  include ./includes/head.jade
  body(id="top")
    if auth
      include ./includes/headerSecure.jade
    else
      include ./includes/header.jade
    section(id="one" class="wrapper style1" style="text-align: center")
      h1 Registration Page
      p.lead Say something worthwhile here.
      br
      h4 #{info}
      form(role='form', id="regForm", action="/register",method="post", style='max-width: 300px; margin: 0 auto;')
        .form-group(style='margin: 5px auto;')
            input.form-control(id="field_username" title="Username must contain at least 6 characters", required, pattern=".{6,}", type='text', name="username", placeholder='Enter Username')
        .form-group(style='margin: 5px auto;')
          input.form-control(id="field_pwd1", title="Must contain at least one number and one uppercase and lowercase letter, and 8 or more characters", type="password", required, pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}", name="password", placeholder='Password')
        .form-group(style='margin: 5px auto;')
          input.form-control(id="field_pwd2", title="Please enter the same Password as above.", type="password", required, pattern="(?=.*\d)(?=.*[a-z])(?=.*[A-Z]).{8,}", name="confirmPassword", placeholder='Confirm Password')
        .form-group(style='margin: 5px auto;')
          input.form-control(required, pattern="[0-9]{3,}", title="Must only contain numbers" type='text', name="shopID", placeholder='Etsy Store #')
        .form-group(style='margin: 5px auto;')
          input.form-control(required, title="Please enter valid email", pattern="[a-z0-9._%+-]+@[a-z0-9.-]+\.[a-z]{2,3}$", type='text', name="email", placeholder='Email Address')
        .form-group
          input.form-control(type='submit', value='register')

      script(src="/js/register.js")